{
    "name": "photo-search-desktop",
    "version": "1.0.0",
    "description": "Desktop photo search application with AI-powered semantic search",
    "main": "main.js",
    "author": "Photo Search Team",
    "license": "MIT",
    "homepage": ".",
    "scripts": {
        "dev": "cross-env NODE_ENV=development electron .",
        "dev:ui": "npm run build:ui && npm run dev",
        "dev:full": "npm run build:ui && npm run prepare:models && npm run dev",
        "build": "npm run build:ui && npm run prepare:models && electron-builder",
        "build:ui": "node scripts/build-ui.js",
        "build:backend": "echo 'Backend bundling not implemented yet'",
        "prepare:models": "node scripts/download-models.js",
        "start": "electron .",
        "pack": "electron-builder --publish=never",
        "dist": "electron-builder --publish=always",
        "dist:mac": "electron-builder --mac --publish=never",
        "dist:win": "electron-builder --win --publish=never",
        "dist:linux": "electron-builder --linux --publish=never",
        "test": "echo 'Tests not implemented yet'",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "^27.1.3",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "electron-log": "^4.4.8",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7",
        "electron-window-state": "^5.0.3",
        "sharp": "^0.34.4"
    },
    "build": {
        "appId": "com.photosearch.desktop",
        "productName": "Photo Search",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "app/**/*",
            "assets/**/*",
            "models/**/*",
            "node_modules/**/*"
        ],
        "extraResources": [
            {
                "from": "models",
                "to": "models",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "category": "public.app-category.photography",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.icns"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.png",
            "category": "Graphics"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "publish": {
            "provider": "github",
            "owner": "photo-search",
            "repo": "photo-search-desktop"
        }
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
