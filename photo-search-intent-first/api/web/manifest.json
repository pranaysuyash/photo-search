{
	"name": "PhotoVault",
	"short_name": "PhotoVault",
	"description": "AI-Powered Photo Management System",
	"start_url": "/",
	"display": "standalone",
	"background_color": "#ffffff",
	"theme_color": "#3b82f6",
	"orientation": "any",
	"prefer_related_applications": false,
	"scope": "/",
	"categories": ["photography", "productivity"],
    "screenshots": [],
    "icons": [
        {
            "src": "/icons/icon-192x192.svg",
            "sizes": "192x192",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        },
        {
            "src": "/icons/icon-512x512.svg",
            "sizes": "512x512",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        }
    ],
	"shortcuts": [
		{
			"name": "Search Photos",
			"short_name": "Search",
			"description": "Search your photo collection",
			"url": "/search",
            "icons": [{ "src": "/icons/icon-192x192.svg", "sizes": "192x192", "type": "image/svg+xml" }]
        },
        {
            "name": "Upload Photos",
            "short_name": "Upload",
            "description": "Add new photos to your collection",
            "url": "/?upload=true",
            "icons": [{ "src": "/icons/icon-192x192.svg", "sizes": "192x192", "type": "image/svg+xml" }]
        },
        {
            "name": "Favorites",
            "short_name": "Favorites",
            "description": "View your favorite photos",
            "url": "/?favorites=true",
            "icons": [{ "src": "/icons/icon-192x192.svg", "sizes": "192x192", "type": "image/svg+xml" }]
        }
    ],
	"share_target": {
		"action": "/share-target/",
		"method": "POST",
		"enctype": "multipart/form-data",
		"params": {
			"files": [
				{
					"name": "photos",
					"accept": ["image/*"]
				}
			]
		}
	},
	"file_handlers": [
		{
			"action": "/open-file/",
			"accept": {
				"image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"]
			}
		}
	]
}
