{
  "name": "photo-search-intent-first-electron",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "node run-electron.js",
    "dev:full": "npm run build:ui && npm run prepare:models && node run-electron.js",
    "build:ui": "cd ../webapp && npm install && npm run build && mkdir -p ../api/web && cp -R dist/* ../api/web/",
    "prepare:models": "python ../scripts/prepare_models.py",
    "pack": "npm run build:ui && npm run prepare:models && electron-builder --dir",
    "dist": "npm run build:ui && npm run prepare:models && electron-builder -mwl"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "tweetnacl": "^1.0.3"
  },
  "build": {
    "appId": "com.photos.search.intentfirst",
    "productName": "Photo Search",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../api/web",
        "to": "web",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../webapp/dist",
        "to": "api_web",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.photography"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yourorg",
        "repo": "photo-search"
      }
    ]
  }
}