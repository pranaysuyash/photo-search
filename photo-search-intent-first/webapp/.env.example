# Error logging feature flags (Vite)
# Enable/disable sending errors to server analytics (default: 1)
VITE_LOG_ERRORS_TO_SERVER=1

# Gate logging by environment: 'prod' (default, only production) or 'all'
VITE_LOG_ERRORS_ENV=prod

# Global sampling for error logs (0..1, default: 1)
# Example: 0.1 logs ~10% of eligible events
VITE_ERROR_LOG_SAMPLE=1

# Image-loading failure sampling (0..1, default: 0.02)
# Increase in staging to study failures; keep low in production
VITE_IMAGE_ERROR_SAMPLE=0.02

# Per-service logging toggles (1=on, 0=off)
VITE_LOG_IMAGE_ERRORS=1
VITE_LOG_VIDEO_ERRORS=1
VITE_LOG_OFFLINE_ERRORS=1
VITE_LOG_OFFLINE_PHOTO_ERRORS=1
VITE_LOG_BACKUP_ERRORS=1
