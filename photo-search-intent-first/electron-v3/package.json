{
    "name": "photo-search-desktop",
    "version": "3.0.0",
    "description": "AI-powered photo search and management desktop application",
    "main": "main.js",
    "homepage": "./",
    "private": true,
    "author": {
        "name": "Photo Search Team",
        "email": "team@photosearch.app"
    },
    "scripts": {
        "electron": "electron .",
        "dev": "concurrently \"npm run build:ui\" \"wait-on http://127.0.0.1:8000 && electron .\"",
        "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:ui\" \"wait-on http://127.0.0.1:5174 http://127.0.0.1:8000 && electron .\"",
        "build": "npm run build:ui && electron-builder",
        "build:ui": "cd ../webapp-v3 && npm run build && cp -r dist/* ../electron-v3/app/",
        "build:dir": "npm run build:ui && electron-builder --dir",
        "build:mac": "npm run build:ui && electron-builder --mac",
        "build:win": "npm run build:ui && electron-builder --win",
        "build:linux": "npm run build:ui && electron-builder --linux",
        "dev:backend": "cd .. && PYTHONPATH=. .venv/bin/python run_server.py",
        "dev:ui": "cd ../webapp-v3 && npm run dev",
        "pack": "npm run build:ui && electron-builder --dir",
        "dist": "npm run build:ui && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "prepare:models": "node scripts/download-models.js",
        "verify:models": "node scripts/download-models.js --verify",
        "clean": "rimraf dist app node_modules package-lock.json",
        "setup": "npm install && npm run prepare:models && npm run build:ui"
    },
    "dependencies": {
        "better-sqlite3": "^9.4.0",
        "electron-log": "^5.0.1",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7",
        "electron-window-state": "^5.0.3"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "electron": "^27.1.3",
        "electron-builder": "^26.0.12",
        "rimraf": "^5.0.5",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.photosearch.desktop",
        "productName": "Photo Search",
        "directories": {
            "output": "dist",
            "app": "app"
        },
        "files": [
            "main.js",
            "preload.js",
            "app/**/*",
            "models/**/*",
            "services/**/*",
            "!node_modules",
            "!src",
            "!scripts",
            "!*.md"
        ],
        "extraResources": [
            {
                "from": "models",
                "to": "models",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "category": "public.app-category.photography",
            "icon": "assets/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "assets/entitlements.mac.plist",
            "entitlementsInherit": "assets/entitlements.mac.plist",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.png",
            "category": "Graphics"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "dmg": {
            "title": "Photo Search",
            "icon": "assets/icon.icns",
            "background": "assets/dmg-background.png",
            "contents": [
                {
                    "x": 130,
                    "y": 220,
                    "type": "file"
                },
                {
                    "x": 410,
                    "y": 220,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    },
    "engines": {
        "node": ">=18.0.0"
    }
}