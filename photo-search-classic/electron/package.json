{
  "name": "photo-search-classic-electron",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "build:ui": "cd ../webapp && npm install && npm run build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.photos.search.classic",
    "productName": "Photo Search Classic",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.map"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.photography"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}